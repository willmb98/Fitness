<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currencyCounter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Coins: 0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:text="Logged in as: NAME"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/charitytxt"
        android:layout_width="411dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:text="Special offers to gain coins"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameView2" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charitytxt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/CharitySignUp1"
                    android:layout_width="153dp"
                    android:layout_height="122dp"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <TextView
                    android:id="@+id/charitytxt2"
                    android:layout_width="154dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="Watch an advert for 5 coins"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/CharitySignUp3"
                    android:layout_width="153dp"
                    android:layout_height="122dp"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <TextView
                    android:id="@+id/charitytxt5"
                    android:layout_width="154dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="Make a purchase through partner site for 50 coins"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/CharitySignUp5"
                    android:layout_width="153dp"
                    android:layout_height="122dp"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <TextView
                    android:id="@+id/charitytxt7"
                    android:layout_width="154dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="Sign up to partner subscription for 150 coins"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/CharitySignUp2"
                    android:layout_width="153dp"
                    android:layout_height="122dp"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <TextView
                    android:id="@+id/charitytxt3"
                    android:layout_width="154dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="Sign up at partner site for 50 coins"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/CharitySignUp4"
                    android:layout_width="153dp"
                    android:layout_height="122dp"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <TextView
                    android:id="@+id/charitytxt4"
                    android:layout_width="154dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="Make a purchase through different site for 100 coins"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/CharitySignUp6"
                    android:layout_width="153dp"
                    android:layout_height="122dp"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <TextView
                    android:id="@+id/charitytxt6"
                    android:layout_width="154dp"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal"
                    android:text="Sign up to this partner subscription for 300 coins"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>