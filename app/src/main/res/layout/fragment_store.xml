<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Logged in as: NAME"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/currencyCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Coins: 0"
        app:layout_constraintEnd_toEndOf="@+id/nameView"
        app:layout_constraintTop_toBottomOf="@+id/nameView" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyCounter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/leftLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="111dp"
                    android:layout_height="112dp"
                    android:scaleType="fitXY"
                    android:tag="50"
                    app:srcCompat="@drawable/ic_freeze" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:text="Freeze your Streak \n 50 coins" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="111dp"
                    android:layout_height="112dp"
                    android:scaleType="fitXY"
                    android:tag="200"
                    app:srcCompat="@drawable/ic_coupon" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:text="30% off se ADIDAS shoes! \n 200 coins" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="111dp"
                    android:layout_height="112dp"
                    android:scaleType="fitXY"
                    android:tag="200"
                    app:srcCompat="@drawable/ic_coupon" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:text="buy at NIKE for free bottle\n200 coins" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="111dp"
                    android:layout_height="112dp"
                    android:scaleType="fitXY"
                    android:tag="100"
                    app:srcCompat="@drawable/ic_weights" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:text="Unlock New Exersizes \n100 coins" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="111dp"
                    android:layout_height="112dp"
                    android:scaleType="fitXY"
                    android:tag="200"
                    app:srcCompat="@drawable/ic_coupon" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:text="Â£10 SPOTS DIRECT credit!\n200 coins" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="111dp"
                    android:layout_height="112dp"
                    android:scaleType="fitXY"
                    android:tag="200"
                    app:srcCompat="@drawable/ic_coupon" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:text="20% off PUMA shits\n 200 coins" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>